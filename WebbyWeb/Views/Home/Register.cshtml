@model WebbyWeb.Models.RegistrationViewModel
@{
    Layout = "/Views/Shared/_IndexLayout.cshtml";
}

<title>Register</title>

<div class="header" style="text-align:center">
    <!-- <div class="brand"><h1>pyramid</h1></div> -->
    <!-- <img src="/images/pyramid_BandW.jpg" style="width:750px;"> -->
</div>
<div class="card card-signup" id="signUpCard">
    <div class="header header-primary text-center" style="background:linear-gradient(60deg, #e2a7ec, #337ab7)">
            <img src="/images/pyramid.png" style="width:60px; filter:invert(100%)">
		</div>
        <!-- Begin Register Form -->
        <form class="form" method="post" id="RegisterForm"  asp-controller="Home" asp-action="Register">
            <div asp-validation-summary="All" class="text-danger"></div>
			<div class="content">
                <div class="input-group">
                    <span class="input-group-addon"><i class="material-icons">face</i></span>
                    <!-- <input type="text" class="form-control" placeholder="username" /> -->
                    <input asp-for="Email" type="text" class="form-control" placeholder="email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="input-group">
                    <span class="input-group-addon"><i class="material-icons">lock_outline</i></span>
                    <!-- <input type="password" placeholder="password" class="form-control" /> -->
                    <input asp-for="Password" type="password" placeholder="password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="input-group">
                    <span class="input-group-addon"><i class="material-icons">lock_outline</i></span>
                    <!-- <input type="password" placeholder="confirm password" class="form-control" /> -->
                    <input asp-for="ConfirmPassword" type="password" placeholder="confirm password" class="form-control" />
				    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group text-center">
                <input type="submit" value="register" style='text-transform:lowercase' class="btn btn-primary btn-md" />
            </div>
        </form>
        <!-- End Register Form -->
        <div class="footer text-center">
            <a asp-controller="Home" asp-action="Login" id="LoginBtn" style="text-transform:lowercase" class="btn btn-simple btn-primary btn-lg">login</a>
            <!-- <button id= "RegisterBtn" style='text-transform:lowercase' class="btn btn-simple btn-primary btn-lg">register</button> -->
        </div>
</div> 
<br>

<script>
    FormatPage();

    function FormatPage(){
        $('#mainCard')[0].className='main';
        $('#mainCard')[0].style.margin='auto';
        $('#mainCard')[0].style.marginTop='40px';
        $('#mainCard')[0].style.width='50%';

    };
</script>
