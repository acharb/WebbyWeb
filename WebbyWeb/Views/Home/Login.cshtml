@model WebbyWeb.Models.Profile
@{
    Layout = "/Views/Shared/_IndexLayout.cshtml";
}

<title>Login</title>

<div class="header" style="text-align:center">
    <!-- <div class="brand"><h1>pyramid</h1></div> -->
    <!-- <img src="/images/pyramid_BandW.jpg" style="width:750px;"> -->
</div>
<div class="card card-signup" id="signUpCard">
    <div class="header header-primary text-center" style="background:linear-gradient(60deg, #e2a7ec, #337ab7)">
            <img src="/images/pyramid.png" style="width:60px; filter:invert(100%)">
		</div>
    <!-- Begin Login Form -->
	<form class="form" method="post" id="LoginForm" asp-controller="Home" asp-action="Login">
		<div asp-validation-summary="All" class="text-danger"></div>
			<div class="content">
                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="material-icons">face</i>
                    </span>
                    <!-- <input type="text" class="form-control" placeholder="username..." /> -->
                    <input asp-for="UserName" type="text" class="form-control" placeholder="username..." />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="material-icons">lock_outline</i>
                    </span>
                    <!-- <input type="password" placeholder="password..." class="form-control" /> -->
                    <input asp-for="Password" type="password" placeholder="password..." class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="checkbox">
                    <label>
                        <input name="RememberMe" type="checkbox">
                        remember me
                    </label>
                </div>
            </div>
            <div class="form-group text-center">
                <input type="submit" value="login" style='text-transform:lowercase' class="btn btn-primary btn-md" />
            </div>
        </form>
        <div class="footer text-center">
            <!-- <a href="#pablo" id="LoginBtn" style="text-transform:lowercase" class="btn btn-simple btn-primary btn-lg">login</a> -->
            <a id= "RegisterBtn" asp-controller="Home" asp-action="Register" style='text-transform:lowercase' class="btn btn-simple btn-primary btn-lg">register</a>
        </div> 
</div> 
<br>

<script>
    FormatPage();
    function FormatPage(){
        $('#mainCard')[0].className='main';
        $('#mainCard')[0].style.margin='auto';
        $('#mainCard')[0].style.marginTop='40px';
        $('#mainCard')[0].style.width='50%';
    };
</script>
